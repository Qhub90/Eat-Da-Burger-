<div class="container" align="center">
<img src="/assets/img/burger.jpg" height="25%" width="25%" class="image">


<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
   
  	  <p>{{burger_name}}

      <button data-id="{{this.id}}" class="devour" data-devour="{{devoured}}">Devour!</button>
      </p>
     {{/unless}}
  	{{/each}}
</ul>
</div>
<br>

<div class="container" align="center">
<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
  	  <p>{{burger_name}}</p>

    {{/if}}
  {{/each}}
</ul>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
